---
import Container from "@components/container.astro";
import Link from "@components/ui/link.astro";
import Dropdown from "./dropdown.astro";
import { Astronav, MenuItems, MenuIcon } from "astro-navbar";

const menuitems = [
  {
    title: "INICIO",
    path: "/",
    /*path: "#"*/
    children: [
      { title: "Action", path: "/" },
      { title: "Another action", path: "#" },
      { title: "Dropdown Submenu", path: "#" },
      { title: "404 Page", path: "/404" },
    ],
  },
  {
    title: "CARACTERISTICAS",
    path: "/caracteristicas",
  },
  {
    title: "GESTIÓN DE TURNOS",
    path: "/gestion-de-turnos",
  },
  {
    title: "CONTACTO",
    path: "/contacto",
  },
  {
    title: "INGRESAR",
    path: "http://gestion.captarmedia.com/#/login",
  },
];
---

<style>
  @media (min-width: 1024px) {
    .parrafo {
      margin-right: 1%; /* Ajusta el margen derecho según sea necesario */
    }
    .menu {
      justify-content: center;
    }
  }
  @media (min-width: 0px) and (max-width: 1023px) {
    .menu {
      width: 100%; /* Establece un ancho máximo */
      width: auto; /* Ancho automático según el contenido 
      //margin: 0 auto;*/
    }
    .contenedor {
      justify-content: space-between;
      /* flex-direction: column;*/
    }
  }
</style>

    <Container>
<div class="flex flex-col justify-center items-center">
  <div style="max-width: 1600px; width: 100%;">

      <header
        class="md:flex justify-center md:justify-between items-center my-3 m-5 contenedor">
        <Astronav>
          <div class="flex justify-between items-center">
            <a href="/">
              <img
                src="../../../src/assets/captarmedia-logo.png"
                class="h-11"
                alt="CaptarMedia Logo"
              />
            </a>
            <div class="block md:hidden">
              <MenuIcon class="w-4 h-4 text-gray-800" />
            </div>
          </div>
          <MenuItems class="hidden mt-2 md:flex md:mt-0 items-center">
            <br class="hidden md:block" />
            <ul class="flex flex-col md:flex-row md:gap-3 text-center mt:10">
              {
                menuitems.map((item) => (
                  <>
                    {
                      <li>
                        <a
                          href={item.path}
                          class={`grid px-4 ${
                            item.title === "INGRESAR"
                              ? "text-white py-2 md:block m-2 md:m-0"
                              : "text-gray-400 md:mt-2 lg:block m-1 md:m-0"
                          } hover:text-red-500 ${
                            item.title === "INGRESAR"
                              ? "rounded-full bg-red-500 hover:bg-gray-200 text-sm"
                              : "mr-1 text-sm "
                          }`}>
                          {item.title}
                        </a>
                      </li>
                    }
                  </>
                ))
              }
            </ul>
          </MenuItems>
        </Astronav>
      </header> </div>
</div>
    </Container>
 
