---
import Contactform from "@components/contactform.astro";
import Container from "@components/container.astro";
import Layout from "@layouts/Layout.astro";
---

<style>
  @media (max-width: 1399px) {
    .franja {
      /* Aplica las clases de Tailwind para pantallas menores de 1400px */
      @apply skew-y-[-3deg] py-20 top-[-85px];
    }
  }

  /* Estilos para pantallas mayores o iguales a 1400px */
  @media (min-width: 1400px) {
    .franja {
      /* Aplica las clases de Tailwind para pantallas mayores o iguales a 1400px */
      @apply skew-y-[-2deg] py-24 top-[-120px];
    }
  }
</style>

<Layout title="Contacto - Captar Media">
  <div class="flex flex-col justify-center items-center bg-white">
    <div style="max-width: 1600px; width: 100%;">
      <Container class="bg-white">
        <h2 class="text-center font-bold text-5xl text-gray-500 m-16">
          DEJANOS TU MENSAJE
        </h2>
        <div class="m-5">
          <div class="grid md:grid-cols-3">
            <div class="col-span-3 md:col-span-1 m-5">
              <h2 class="font-normal text-2xl text-gray-500">Teléfono {">"}</h2>
              <p class="font-bold text-lg leading-relaxed text-slate-400">
                (0261) 4233074
              </p>
              <br />
              <h2 class="font-normal text-2xl text-gray-500">Mail {">"}</h2>
              <p class="font-bold text-lg leading-relaxed text-slate-400">
                info@captarmedia.com
              </p>
              <br />
              <h2 class="font-normal text-2xl text-gray-500">Oficinas {">"}</h2>
              <p class="font-bold text-lg leading-relaxed text-slate-400">
                Av. España 1233 (5500)
              </p>
              <p class="font-bold text-lg leading-relaxed text-slate-400">
                Ciudad, Mendoza
              </p>
            </div>
            <div class="col-span-3 md:col-span-2">
              <div class="m-5">
                <Contactform />
              </div>
            </div>
          </div>
        </div>
        <br />
        <br />
        <br />
        <br />
        <br />
        <br />
        <br />
        <br />
      </Container>
    </div>
  </div>
  <br /><br />
  <div class="bg-gray-200">
    <div class="relative">
      <div class="text-center text-4xl absolute w-full z-10">
        <h2 class="m-5 text-red-600 font-bold">
          Te invitamos a probar nuestro software ya
        </h2>
        <div class="button-container text-center">
          <button
            class="m-2 btn transform transition-transform hover:scale-110">
            <img
              src="../../src/assets/captarmedia-download-07-300x78.png"
              alt="Botón con imagen"
              class="btn-img"
            />
          </button>
        </div>
      </div>
      <div
        class="franja md:mt-0 relative bg-gradient-to-b from-gray-200 to-gray-200 transform">
      </div>
    </div>
    <br class="block md:hidden" />
    <br class="block md:hidden" />
    <br />
    <br />
    <br />
    <br />
    <br />
  </div>
</Layout>
